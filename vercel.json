{
  "functions": {
    "api/index.php": {
      "runtime": "vercel-php@0.7.1"
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.php" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "builds": [
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "css/styles.css", "use": "@vercel/static" },
    { "src": "js/script.js", "use": "@vercel/static" }
  ]
}

